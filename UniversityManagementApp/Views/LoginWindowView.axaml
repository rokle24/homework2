<UserControl
    Background="Transparent"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="homework2.Views.LoginWindowView"
    x:CompileBindings="True"
    x:DataType="vm:LoginWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:homework2.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <TextBlock
            Margin="10"
            Text="University Management App"
            TextAlignment="Center"
            x:Name="Msg" />
        <TextBox Watermark="Username" x:Name="UserNameBox" />
        <TextBox
            PasswordChar="*"
            Watermark="Password"
            x:Name="PasswordBox" />

        <StackPanel Orientation="Horizontal">
            <Button
                Content="Register"
                DataContext="vm:MainWindowViewModel"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                IsEnabled="True"
                Margin="10,0"
                Width="100"
                x:Name="RegisterButton" />
            <Button
                Content="Log in"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                Margin="10"
                Width="100"
                x:Name="LoginButton" />
        </StackPanel>

    </StackPanel>

</UserControl>
