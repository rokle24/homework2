<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="homework2.Views.RegisterWindowView"
    x:CompileBindings="True"
    x:DataType="vm:RegisterWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:homework2.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">

                <TextBlock
                    Margin="8"
                    Text="Please fill the form"
                    x:Name="RegForm" />
                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <TextBox
                            Watermark="Full Name"
                            Width="150"
                            x:Name="FullNameBox" />
                        <TextBox Watermark="Username" x:Name="UserNameBox" />
                        <TextBox
                            PasswordChar="*"
                            Watermark="Password"
                            x:Name="PasswordBox" />
                    </StackPanel>

                    <StackPanel Margin="20,-15" Orientation="Vertical">
                        <TextBlock
                            Margin="7"
                            Text="Select"
                            TextAlignment="Center" />
                        <ListBox
                            Background="Transparent"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            ItemsSource="{Binding SelectionList}"
                            SelectedItem="{Binding selection, Mode=TwoWay}"
                            x:Name="ListBox" />
                    </StackPanel>

                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Button
                        Click="ReturnButtonOnClick"
                        Content="Return"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Margin="8,30"
                        Width="100"
                        x:Name="ReturnButton" />
                    <Button
                        Click="RegisterButtonOnClick"
                        Content="Register"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Margin="30"
                        Width="100"
                        x:Name="RegisterButton" />
                </StackPanel>

            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
